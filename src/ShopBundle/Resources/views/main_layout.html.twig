<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Интернет магазин{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('bundles/shop/bootstrap/css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/shop/bootstrap/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/shop/bootstrap/css/font-awesome.css') }}" rel="stylesheet">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}

    <div class="navbar navbar-inverse navbar-static-top" id="main_menu">
        <div class="container">
            <div class="navbar-header">
                <a href="#" class="navbar-brand">Интернет магазин</a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-menu">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="main-menu">
                <ul class="nav navbar-nav">
                    <li><a class="main-menu-links" href="{{ path('shop_homepage') }}">Главная</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle main-menu-links" data-toggle="dropdown">Категории <b
                                    class="caret"></b></a>
                        <ul class="dropdown-menu">
                            {% for  category in categories %}
                                <li><a href="#">{{ category.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                    <li><a class="main-menu-links" href="#">Поиск</a></li>
                    <li><a class="main-menu-links" href="#" data-toggle="modal" data-target="#modal-1">Авторизация</a>
                    </li>
                    <li><a class="main-menu-links" href="#">Регистрация</a></li>
                </ul>
            </div>
        </div>
    </div>
    {% block content %}

    {% endblock %}
    <div class="modal fade" id="modal-1">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" type="button" data-dismiss="modal">
                        <i class="fa fa-close"></i>
                    </button>
                    <h4 class="modal-title">Введите данные для авторизации</h4>
                </div>
                <div class="modal-body">
                    <form action="" method="get" class="navbar-form">
                        <input type="text" class="form-control" placeholder="E-mail" value="">
                        <input type="password" class="form-control" placeholder="Пароль">
                        <button type="submit" class="btn btn-primary btn-xs">
                            <i class="fa fa-sign-in"></i>
                            Войти
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/shop/js/jquery-1.12.3.js') }}"></script>
    <script src="{{ asset('bundles/shop/bootstrap/js/bootstrap.js') }}"></script>
{% endblock %}
</body>
</html>